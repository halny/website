= semantic_form_for [:admin, @post] do |f|
  = f.inputs do
    = f.input :title, label: 'Tytuł'
    = f.input :published_at, label: 'Data publikacji', as: :date
    = f.input :content, label: 'Treść', as: :ckeditor
  = f.buttons do
    = f.commit_button "Zapisz", button_html: { class: 'button medium brown radius' }
